{
  "name": "netvis",
  "version": "0.1.0",
  "description": "Educational Network Visualization Tool",
  "main": "electron/main.js",
  "type": "module",
"scripts": {
  "start": "electron .",
  "dev": "concurrently -k \"npm:dev:vite\" \"npm:dev:electron\"",
  "dev:vite": "vite",
  "dev:electron": "wait-on http://localhost:5173 && nodemon --watch electron --ext js,mjs,json --exec electron .",
  "build": "npm run build:vite && npm run build:electron && tsc",
  "build:vite": "vite build",
  "build:electron": "electron-builder",
  "rebuild": "electron-rebuild",
  "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
  "format": "prettier --write .",
  "preview": "vite preview && electron ."
},

  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "node-gyp": "^11.5.0",
    "pcap-parser": "^0.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^9.0.1"
  },
  "directories": {
    "buildResources": "build",
    "test": "test"
  },
  "build": {
    "appId": "com.netvis.app",
    "productName": "NetVis",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
